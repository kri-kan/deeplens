# WhatsApp Session Configuration
SESSION_ID=community_alpha
TENANT_NAME=YourTenantName

# Data Directory
DATA_DIR=./data

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=tenant-<your-tenant-uuid>

# Database Configuration
# IMPORTANT: If using DeepLens infrastructure (Podman containers), PostgreSQL runs on port 5433
# The container maps 5433:5432 (host:container) - see infrastructure/setup-deeplens-dev.ps1
# Note: Special characters in password should be URL encoded (! becomes %21)
# Default password for DeepLens infrastructure: DeepLens123! (encoded as DeepLens123%21)

# DeepLens Core Database (for tenant metadata, feature extraction, etc.)
# This is optional - only needed if integrating with full DeepLens platform
deeplens_vayyari_connection_string=postgresql://postgres:DeepLens123%21@localhost:5433/tenant_vayyari_metadata

# WhatsApp Data Database (for messages, chats, media metadata)
# REQUIRED: This database stores all WhatsApp chat tracking data
vayyari_wa_db_connection_string=postgresql://postgres:DeepLens123%21@localhost:5433/whatsapp_vayyari_data

# Server Configuration
API_PORT=3005
LOG_LEVEL=info

# Kafka Configuration (for message processing queue)
# Default values work with DeepLens infrastructure
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=whatsapp-processor
KAFKA_GROUP_ID=whatsapp-processing-group
KAFKA_TOPIC=whatsapp-ready-messages
