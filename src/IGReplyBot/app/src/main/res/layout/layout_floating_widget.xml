<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:elevation="4dp">

    <!-- Changed Button to TextView to allow edge-to-edge text and proper 2-line wrapping -->
    <TextView
        android:id="@+id/btn_reply_cycle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="11sp"
        android:textColor="#000000"
        android:maxLines="2"
        android:minLines="1"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/switch_auto_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Auto"
            android:textSize="11sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/img_drag_handle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:alpha="0.5"
            android:contentDescription="Drag Handle" />

        <Button
            android:id="@+id/btn_close_service"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="X"
            android:textSize="11sp"
            android:padding="0dp"
            android:minHeight="0dp"
            android:minWidth="0dp" />
    </RelativeLayout>

</LinearLayout>
